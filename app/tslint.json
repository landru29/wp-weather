{
    "extends": "tslint-config-standard",
    "rules": {
        "quotemark": [
            true,
            "single",
            "avoid-escape",
            "jsx-double"
        ],
        "ter-indent": [
            true,
            4,
            {
              "SwitchCase": 2
            }
        ],
        "semicolon": [
            true,
            "always"
        ],
        "space-before-function-paren": [true, {
            "anonymous": "always",
            "named": "always",
            "asyncArrow": "always"
        }],
        "trailing-comma": [
            true,
            {
              "multiline": "always",
              "singleline": "never"
            }
        ],
        "typedef": [
            true,
            "call-signature",
            "property-declaration"
        ]

    }
}